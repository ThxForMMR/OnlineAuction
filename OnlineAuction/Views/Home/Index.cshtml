@using OnlineAuction.Models
@model IEnumerable<Item>
@{
    ViewData["Title"] = "Home Page";
}
<a asp-action="Create">Добавить лот</a>
<table class="table">
    <tr><td>Наименование</td><td>Производитель</td><td>Цена</td></tr>
    @foreach (Item item in Model)
    {
        <tr><td>@item.Name</td><td>@item.Company</td><td>@item.Cost</td>
            <td>                
                <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id">Удалить</a> |
                <a asp-action="Buy" asp-controller="Home" asp-route-id="@item.Id">Купить</a>
            </td>
        </tr>
    }
</table>