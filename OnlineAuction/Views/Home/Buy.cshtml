@model OnlineAuction.Models.Item
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewBag.Title = "Покупка лота";
}

<div>
    <dl class="dl-horizontal">
        <dt>@Localizer["Name"]</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>@Localizer["Cost"]</dt>
        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt>@Localizer["Company"]</dt>
        <dd>
            @Html.DisplayFor(model => model.Company)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Buy" method="post">
            <div class="form-group">
                <input type="number" name="card" />
                <input type="text" name="key"/>
                <input type="submit" class="btn btn-default" value="@Localizer["Buy"]" />
            </div>
        </form>
    </div>
</div>
