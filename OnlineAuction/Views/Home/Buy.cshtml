@model OnlineAuction.Models.Item
@{
    ViewBag.Title = "Покупка лота";
}

<div>
    <dl class="dl-horizontal">
        <dt>Наименование</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Цена</dt>
        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt>Производитель</dt>
        <dd>
            @Html.DisplayFor(model => model.Company)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Buy" method="post">
            <div class="form-group">
                <input type="number" name="card"/>
                <input type="submit" class="btn btn-default" value="Купить" />
            </div>
        </form>
    </div>
</div>
