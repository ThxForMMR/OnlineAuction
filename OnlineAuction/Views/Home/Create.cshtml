@model OnlineAuction.Models.Item
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewBag.Title = "Добавление лота";
}
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="Name" class="control-label">@Localizer["Name"]</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cost" class="control-label">@Localizer["Cost"]</label>
        <input type="number" asp-for="Cost" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Company" class="control-label">@Localizer["Company"]</label>
        <input type="text" asp-for="Company" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="@Localizer["Create"]" class="btn btn-default" />
    </div>
</form>